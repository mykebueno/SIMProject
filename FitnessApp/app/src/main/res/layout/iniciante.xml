<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAFDF6">

    <ImageButton
        android:id="@+id/buttonIniciante"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="@drawable/perna"
        android:text="Iniciante"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="461dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAvançado"/>

    <ImageButton
        android:id="@+id/buttonIntermedio"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="@drawable/costas"
        android:text="Intermédio"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="210dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonAvançado"
        app:layout_constraintTop_toBottomOf="@+id/buttonAvançado2"/>

    <ImageButton
        android:id="@+id/buttonAvançado"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="@drawable/peito"
        android:text="Avançado"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="335dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonIniciante"
        app:layout_constraintTop_toBottomOf="@+id/buttonIntermedio"/>

    <ImageButton
        android:id="@+id/buttonAvançado2"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="@drawable/braco"
        android:text="Avançado"
        app:layout_constraintBottom_toTopOf="@+id/buttonIntermedio"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treino para Iniciantes"
        android:textColor="#000000"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAvançado2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    />

</androidx.constraintlayout.widget.ConstraintLayout>