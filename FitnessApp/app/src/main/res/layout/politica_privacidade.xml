<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAFDF6">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Política de Privacidade"
        android:textColor="#000000"
        android:textSize="38dp"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="34dp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="363dp"
        android:layout_height="72dp"
        android:text="1ª - A proteção da privacidade e dos dados pessoais constitui um compromisso fundamental dos programadores da aplicação para com os seus utilizadores."
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/textView16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="366dp"
        android:layout_height="41dp"
        android:text="Esta aplicação segue as seguintes normas de segurança e proteção dados:"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aprovado e revisto em Janeiro de 2022"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipa da Fitness App"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="368dp"
        android:layout_height="57dp"
        android:text="2ª - Qualquer dado recolhido será apenas armazenado na nossa base de dados e ninguém terá acesso a mesma para além da equipa da Fitness App."
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/textView17"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="369dp"
        android:layout_height="59dp"
        android:text="3ª - Esta aplicação deve ser utilizada apenas para fins educacionais. Não é necessário qualquer pagamento para a utilização total da aplicação."
        android:textColor="#000000"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="344dp"
        app:layout_constraintBottom_toTopOf="@+id/textView18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16"/>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="367dp"
        android:layout_height="52dp"
        android:text="4ª - Esta aplicação não tenciona utilizar os dados registados de qualque maneira malisiosa sendo apenas utilizados para melhorar a qualidade de vida dos utilizadores"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="416dp"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17"/>

</androidx.constraintlayout.widget.ConstraintLayout>